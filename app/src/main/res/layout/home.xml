<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_bar"
        android:orientation="vertical">

    <TextView
        android:id="@+id/nameandsurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint=""
        android:fontFamily="@font/cocon_regular"
        android:textSize="15sp"
        android:textColorHint="@color/grigio"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/TXtotalfunds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Total Funds"
        android:fontFamily="@font/cocon_regular"
        android:textSize="35sp"
        android:textColorHint="@color/celeste"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/totalfunds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint=""
        android:fontFamily="@font/cocon_regular"
        android:textSize="35sp"
        android:textColorHint="@color/grigio"
        android:gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView1"
                android:layout_gravity="center_horizontal"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/bar1"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/bar2"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/bar3"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/bar4"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:menu="@menu/navigation_button"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        />

</RelativeLayout>
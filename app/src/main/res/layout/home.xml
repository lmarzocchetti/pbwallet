<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_bar"
        android:orientation="vertical">

    <TextView
        android:id="@+id/nameandsurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint=""
        android:fontFamily="@font/cocon_regular"
        android:textSize="15sp"
        android:textColorHint="@color/grigio"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/TXtotalfunds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Total Funds"
        android:fontFamily="@font/cocon_regular"
        android:textSize="35sp"
        android:textColorHint="@color/celeste"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/totalfunds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint=""
        android:fontFamily="@font/cocon_regular"
        android:textSize="35sp"
        android:textColorHint="@color/grigio"
        android:gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:fontFamily="@font/cocon_regular">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:textSize="13sp"
                    android:fontFamily="@font/cocon_regular"
                    android:layout_gravity="center"
                    android:id="@+id/textView1.1"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cocon_regular"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/textView1.2"
                    android:textSize="13sp"
                    android:fontFamily="@font/cocon_regular"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/bar1"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:fontFamily="@font/cocon_regular"
                android:id="@+id/textView2.1"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView2"
                android:textSize="21sp"
                android:fontFamily="@font/cocon_regular"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView2.2"
                android:textSize="13sp"
                android:fontFamily="@font/cocon_regular"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:padding="10dp"/>
        </RelativeLayout>

            <ImageView
                android:id="@+id/bar2"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:textSize="13sp"
                    android:fontFamily="@font/cocon_regular"
                    android:layout_gravity="center"
                    android:id="@+id/textView3.1"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/textView3"
                    android:textSize="21sp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/cocon_regular"
                    android:layout_gravity="center"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/textView3.2"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:fontFamily="@font/cocon_regular"
                    android:padding="10dp"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/bar3"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textSize="13sp"
                android:layout_gravity="center"
                android:fontFamily="@font/cocon_regular"
                android:id="@+id/textView4.1"
                android:padding="10dp"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text=""
                 android:id="@+id/textView4"
                 android:textSize="21sp"
                 android:fontFamily="@font/cocon_regular"
                 android:layout_gravity="center"
                 android:layout_centerInParent="true"
                 android:padding="10dp"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text=""
                 android:id="@+id/textView4.2"
                 android:textSize="13sp"
                 android:layout_gravity="center"
                 android:layout_alignParentEnd="true"
                 android:fontFamily="@font/cocon_regular"
                 android:padding="10dp"/>
         </RelativeLayout>

            <ImageView
                android:id="@+id/bar4"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="1dp" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textSize="13sp"
                android:fontFamily="@font/cocon_regular"
                android:layout_gravity="center"
                android:id="@+id/textView5.1"
                android:padding="10dp"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text=""
                 android:id="@+id/textView5"
                 android:textSize="21sp"
                 android:layout_centerInParent="true"
                 android:fontFamily="@font/cocon_regular"
                 android:layout_gravity="center"
                 android:padding="10dp"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text=""
                 android:id="@+id/textView5.2"
                 android:layout_alignParentEnd="true"
                 android:textSize="13sp"
                 android:layout_gravity="center"
                 android:fontFamily="@font/cocon_regular"
                 android:padding="10dp"/>
         </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar"
        style="@style/BottomNavView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:backgroundTint="@color/celeste"
        app:menu="@menu/navigation_button"
        app:itemIconTint="@color/bianco_papiro"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
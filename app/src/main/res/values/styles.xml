<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/grigio</item>
        <item name="colorControlActivated">@color/grigio</item>
        <item name="colorControlHighlight">@color/grigio</item>
    </style>

    <style name="BottomNavView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bianco_papiro</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Switchpercent" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorOnSurface">@color/celeste</item>
        <item name="colorSurface">@color/celeste</item>
        <item name="colorSecondary">@color/celeste</item>
    </style>
</resources>